include ../checkbox/checkbox

mixin filters(className, items)
  .filters(class=className || '')
    form.filters__form(action="")
      each item in items
        if item === 'subject'
          label.filters__input.dropdown(data-input="subject")
            input.filters__input-field(type="text", name="subject", placeholder=(className === 'hero__filters' ?  "Выберите предмет": "Предмет"), autocomplete="off", data-options='["Английский язык", "Математика", "Украинский язык", "Программирование", "Физика", "Химия", "Биология", "Русский язык", "История"]')
            .filters__dropdown.dropdown__menu
              .filters__dropdown-inner
        if item === 'location'
          label.filters__input.dropdown(data-input="location")
            input.filters__input-field(type="text", name="location", placeholder=(className ==='hero__filters' ? "Выберите вашу локацию" : "Локация"), autocomplete="off")
            .filters__dropdown.dropdown__menu
              .filters__dropdown-head
                +checkbox('Онлайн', 'locationOnline', 'filters__dropdown-checkbox')
              .filters__dropdown-inner
        if item === 'cost'
          label.filters__input.dropdown(data-input="cost")
            input.filters__input-field(type="text", name="cost", placeholder="Стоимость", autocomplete="off", readonly)
            .filters__dropdown.dropdown__menu
              .filters__dropdown-inner
              .filters__cost
                p.filters__cost-head
                  span.filters__cost-value <span data-cost="from">1000</span> &#8381; – <span data-cost="to">6000</span> &#8381;
                  span.filters__cost-desc в час
                .filters__cost-range(data-min="1000", data-max="6000")
        if item === 'term'
          label.filters__input.dropdown(data-input="term")
            input.filters__input-field(type="text", name="term", placeholder="Опыт репетитора", autocomplete="off", data-options='["До 1 года", "От 1 года", "От 2 лет", "От 3 лет", "От 5 лет", "От 10 лет"]')
            .filters__dropdown.dropdown__menu
              .filters__dropdown-inner
      +button('primary', 'submit', 'Найти', 'filters__btn')