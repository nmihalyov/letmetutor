mixin top
  section.top.container
    .top__wrapper.wrapper
      +heading('Топ репетиторов')
      .top__grid
        each el in items
          a.top__item(href="#")
            .top__item-pic(style=`background-image: url("img/inhtml/${el.image}")`)
            p.top__item-name= el.name
            .top__item-feedback
              span.top__item-rating= el.rating
              span.top__item-reviews= `(${el.reviews})`
            p.top__item-subjects= el.subjects
      .top__btn
        +button('primary', 'link', 'Присоединиться', '', {link: '#'})